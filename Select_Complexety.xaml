<Page x:Class="Snake.Select_Complexety"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Snake"
      mc:Ignorable="d" 
      d:DesignHeight="769" d:DesignWidth="1389"
      Title="Select_Complexety" Focusable="True" KeyDown="Page_KeyDown_1" x:Name="FF"  >

    <Grid  Background="{DynamicResource BackGround}" >
    
        <Canvas Height="600" Width="600" HorizontalAlignment="Center" Margin="0,0,0,100" VerticalAlignment="Center"  x:Name="SelectMapCanvas"></Canvas>
        <Image MouseDown="Image_MouseDown" Source="pack://application:,,,/ButtonImage/Стрелка_Вправо.png" Height="100" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,50,0"></Image>
        <Image MouseDown="Image_MouseDown_1" Source="pack://application:,,,/ButtonImage/Стрелка_Влево.png" Height="100" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="50,0,0,0"></Image>
        <Grid Height="50" Width="AUTO" Margin="0,0,0,30" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Button Height="50" Width="200" Margin="250,0,0,0" HorizontalAlignment="Right"  Background="{DynamicResource ButtonColor}" Foreground="{DynamicResource Text}" FontFamily="Minecraft Ten font cyrillic" Click="Button_Click_1">2 Игрока</Button>
            <Button Height="50" Width="200" Click="Button_Click" HorizontalAlignment="Left" Background="{DynamicResource ButtonColor}" Foreground="{DynamicResource Text}" FontFamily="Minecraft Ten font cyrillic">1 Игрок</Button>
        </Grid>
    
    
    </Grid>
</Page>
