<Page x:Class="Snake.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Snake"
      mc:Ignorable="d" 
      d:DesignHeight="450"  d:DesignWidth="800"
      Title="Registration" Focusable="True" KeyDown="Page_KeyDown"> 
    <Grid Background="{DynamicResource BackGround}">
        <Grid Visibility="Hidden" x:Name="RegistratrationMenu">
            <StackPanel  HorizontalAlignment="Center">
                <StackPanel Margin="10">
                <TextBlock Foreground="{DynamicResource Text}" FontSize="30" TextAlignment="Center">Регистрация</TextBlock>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBlock HorizontalAlignment="Right" Foreground="{DynamicResource Text}" FontSize="30" >Логин:</TextBlock>
                        <TextBox x:Name="LoginReg" Margin="10 0 0 0" Grid.Column="1" Width="400" Background="{DynamicResource ButtonColor}" HorizontalAlignment="Left" Foreground="{DynamicResource Text}" FontSize="30"  ></TextBox>
                    </Grid>
                      </StackPanel>
                <StackPanel  Margin="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBlock HorizontalAlignment="Right" Foreground="{DynamicResource Text}" FontSize="30">Пароль:</TextBlock>
                        <TextBox x:Name="PasswordReg" Margin="10 0 0 0" Grid.Column="1" Width="400" Background="{DynamicResource ButtonColor}" HorizontalAlignment="Left" Foreground="{DynamicResource Text}" FontSize="30"  ></TextBox>
                    </Grid>
                </StackPanel>
                <StackPanel  Margin="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBlock HorizontalAlignment="Right" Foreground="{DynamicResource Text}" FontSize="30" >Почта:</TextBlock>
                        <TextBox x:Name="EmailReg" Margin="10 0 0 0" Grid.Column="1" Width="400" Background="{DynamicResource ButtonColor}" HorizontalAlignment="Left" Foreground="{DynamicResource Text}" FontSize="30" ></TextBox>
                    </Grid>
                </StackPanel>
                <Button x:Name="RegButton" Click="RegButton_Click" Margin="50,50,0,0" HorizontalAlignment="Center" Width="500" Background="{DynamicResource ButtonColor}" Foreground="{DynamicResource Text}" FontSize="30" >Зарегестрироваться</Button>
            </StackPanel>
        </Grid>
        <Grid Visibility="Hidden"  x:Name="LoginMenu">
            <StackPanel  HorizontalAlignment="Center">
                <StackPanel Margin="10">
                    <TextBlock Foreground="{DynamicResource Text}" FontSize="30"  TextAlignment="Center">Авторизация</TextBlock>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBlock HorizontalAlignment="Right" Foreground="{DynamicResource Text}" FontSize="30" >Логин:</TextBlock>
                        <TextBox x:Name="LoginLog" Margin="10 0 0 0" Grid.Column="1" Width="400" Background="{DynamicResource ButtonColor}" HorizontalAlignment="Left" Foreground="{DynamicResource Text}" FontSize="30"  ></TextBox>
                    </Grid>
                </StackPanel>
                <StackPanel  Margin="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBlock HorizontalAlignment="Right" Foreground="{DynamicResource Text}" FontSize="30">Пароль:</TextBlock>
                        <TextBox x:Name="LoginPass" Margin="10 0 0 0" Grid.Column="1" Width="400" Background="{DynamicResource ButtonColor}" HorizontalAlignment="Left" Foreground="{DynamicResource Text}" FontSize="30"  ></TextBox>
                    </Grid>
                
                </StackPanel>
                <Button Click="LogButton_Click" HorizontalAlignment="Center"  x:Name="LogButton" Margin="50,50,0,0" Width="500" Background="{DynamicResource ButtonColor}" Foreground="{DynamicResource Text}" FontSize="30" >Войти</Button>

            </StackPanel>
        </Grid>
    </Grid>
</Page>
