<Page x:Class="Snake.Settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Snake"
      mc:Ignorable="d" 
      d:DesignHeight="768" d:DesignWidth="1366"
      Title="Settings" KeyUp="Page_KeyUp" Focusable="True" x:Name="settings" FocusableChanged="settings_FocusableChanged">

    <Grid Background="{DynamicResource BackGround}" Focusable="False">
        <TextBlock Visibility="Hidden" Background="Black" Text="Нажмите кнопку..." Opacity="0.3"  ></TextBlock>
        <StackPanel VerticalAlignment="Top" Margin="0,50,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="550"></ColumnDefinition>
                    <ColumnDefinition>
                    </ColumnDefinition>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <Label Margin="10" Background="{DynamicResource ButtonColor}" Height="50" Width="300"  Content="Вверх" Foreground="{DynamicResource Text}" FontSize="25" HorizontalContentAlignment="Center" FontFamily="Minecraft Ten font cyrillic"></Label>
                    <Label  Margin="10" Background="{DynamicResource ButtonColor}" Height="50" Width="300"  Content="Вниз" Foreground="{DynamicResource Text}" FontSize="25" HorizontalContentAlignment="Center" FontFamily="Minecraft Ten font cyrillic"></Label>
                    <Label Margin="10" Background="{DynamicResource ButtonColor}" Height="50" Width="300"  Content="Влево" Foreground="{DynamicResource Text}" FontSize="25" HorizontalContentAlignment="Center" FontFamily="Minecraft Ten font cyrillic"></Label>
                    <Label Margin="10" Background="{DynamicResource ButtonColor}" Height="50" Width="300"  Content="Вправо" Foreground="{DynamicResource Text}" FontSize="25" HorizontalContentAlignment="Center" FontFamily="Minecraft Ten font cyrillic"></Label>
                </StackPanel>

                <Grid Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"></ColumnDefinition>
                        <ColumnDefinition Width="auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <Button x:Name="Up" Click="Up_Click" HorizontalAlignment="Left" Margin="10" Background="{DynamicResource ButtonColor}" Height="50" Width="300" Foreground="{DynamicResource Text}" FontSize="25" HorizontalContentAlignment="Center" FontFamily="Minecraft Ten font cyrillic"></Button>
                        <Button x:Name="Down" Click="Down_Click"  HorizontalAlignment="Left" Margin="10" Background="{DynamicResource ButtonColor}" Height="50" Width="300" Foreground="{DynamicResource Text}" FontSize="25" HorizontalContentAlignment="Center" FontFamily="Minecraft Ten font cyrillic"></Button>
                        <Button x:Name="Left" Click="Left_Click" HorizontalAlignment="Left" Margin="10" Background="{DynamicResource ButtonColor}" Height="50" Width="300" Foreground="{DynamicResource Text}" FontSize="25" HorizontalContentAlignment="Center" FontFamily="Minecraft Ten font cyrillic"></Button>
                        <Button x:Name="Right" Click="Right_Click" HorizontalAlignment="Left" Margin="10" Background="{DynamicResource ButtonColor}" Height="50" Width="300" Foreground="{DynamicResource Text}" FontSize="25" HorizontalContentAlignment="Center" FontFamily="Minecraft Ten font cyrillic"></Button>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Margin="40,0,0,0">
                        <Button x:Name="UpSecond" Click="UpSecond_Click" HorizontalAlignment="Left" Margin="10" Background="{DynamicResource ButtonColor}" Height="50" Width="300" Foreground="{DynamicResource Text}" FontSize="25" HorizontalContentAlignment="Center" FontFamily="Minecraft Ten font cyrillic"></Button>
                        <Button x:Name="DownSecond" Click="DownSecond_Click"  HorizontalAlignment="Left" Margin="10" Background="{DynamicResource ButtonColor}" Height="50" Width="300" Foreground="{DynamicResource Text}" FontSize="25" HorizontalContentAlignment="Center" FontFamily="Minecraft Ten font cyrillic"></Button>
                        <Button x:Name="LeftSecond" Click="LeftSecond_Click" HorizontalAlignment="Left" Margin="10" Background="{DynamicResource ButtonColor}" Height="50" Width="300" Foreground="{DynamicResource Text}" FontSize="25" HorizontalContentAlignment="Center" FontFamily="Minecraft Ten font cyrillic"></Button>
                        <Button x:Name="RightSecond" Click="RightSecond_Click" HorizontalAlignment="Left" Margin="10" Background="{DynamicResource ButtonColor}" Height="50" Width="300" Foreground="{DynamicResource Text}" FontSize="25" HorizontalContentAlignment="Center" FontFamily="Minecraft Ten font cyrillic"></Button>
                    </StackPanel>
                </Grid>
            </Grid>
        </StackPanel>
        </Grid>
</Page>
